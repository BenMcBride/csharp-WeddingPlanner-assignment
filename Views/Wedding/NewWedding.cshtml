@model Wedding
<div class="container">
  <div>@await Html.PartialAsync("_NavBar")</div>
</div>

<div class="container mt-3">
  <h1 class="display-4">Plan a Wedding</h1>
  <form asp-action="CreateWedding" asp-controller="Wedding" method="post">
    <div class="container mt-3 border rounded">
      <div class="row mb-3 mt-3">
        <label asp-for="WedderOne" class="col-sm-2 col-form-label">Wedder One:</label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="WedderOne">
          <span class="text-danger" asp-validation-for="WedderOne"></span>
        </div>
      </div>
      <div class="row mb-3 mt-3">
        <label asp-for="WedderTwo" class="col-sm-2 col-form-label">Wedder Two:</label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="WedderTwo">
          <span class="text-danger" asp-validation-for="WedderTwo"></span>
        </div>
      </div>
      <div class="row mb-3">
        <label asp-for="Date" class="col-sm-2 col-form-label">Date:</label>
        <div class="col-sm-10">
          <input type="date" asp-for="Date">
          <span class="text-danger" asp-validation-for="Date"></span>
        </div>
      </div>
      <div class="row mb-3 mt-3">
        <label asp-for="Address" class="col-sm-2 col-form-label">Address:</label>
        <div class="col-sm-10">
          <textarea class="form-control" asp-for="Address"></textarea>
          <span class="text-danger" asp-validation-for="Address"></span>
        </div>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
  </form>
  
</div>